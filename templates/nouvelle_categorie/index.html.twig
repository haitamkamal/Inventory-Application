{% extends 'base.html.twig' %}

{% block title %}Hello NouvelleCategorieController!
{% endblock %}

{% block body %}
<div class="flex " >
	<a href="{{path('app_articles')}}" class=" basis-1/3 underline">Articles</a>
	<a href="{{path('app_categories')}}" class=" basis-1/3 underline" >Catégories</a>
	<a href="{{path('app_deffault')}}" class=" basis-1/3 underline" >Home</a>
	<a href="{{path('app_nouvelle_article')}}" class=" basis-1/3 underline">Nouvelle Article</a>
	<a href="{{path('app_nouvelle_catégorie')}}" class=" basis-1/3 underline" >Nouvelle Catégorie</a>
</div>

<div class="h-10 w-full border-yellow-600 border-2 rounded-md my-10 p-5 flex justify-center items-center bg-yellow-200">
    <h1 class="text-lg text-center font-serif text-red-600 mb-1 animate-bounce">Ajouter une nouvelle catégorie</h1>
</div>

<div class="max-w-md mx-auto bg-white p-6 rounded-lg shadow-md">
    {{ form_start(form) }}
    <div class="mb-4">
        {{ form_label(form.categorie, 'Categorie', {'label_attr': {'class': 'block text-gray-700 font-semibold mb-2'}}) }}
        {{ form_widget(form.categorie, {'attr': {'class': 'w-full px-3 py-2 border border-yellow-600 rounded-lg focus:outline-none focus:ring-2 focus:ring-yellow-600'}}) }}
    </div>

    <div class="mb-4">
        {{ form_widget(form.ajouter, {'attr': {'class': 'w-full bg-red-600 hover:bg-red-700 text-white font-semibold py-2 px-4 rounded-lg shadow-md transition duration-300 ease-in-out'}}) }}
    </div>
    {{ form_end(form) }}
</div>

		{{ form_end(form) }}
</div>



{% endblock %}
