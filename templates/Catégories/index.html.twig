{% extends 'base.html.twig' %}

{% block title %}Hello DeffaultController!
{% endblock %}

{% block body %}
<div class="flex " >
	<a href="{{path('app_articles')}}" class=" basis-1/3 underline">Articles</a>
	<a href="{{path('app_categories')}}" class=" basis-1/3 underline" >Catégories</a>
	<a href="{{path('app_deffault')}}" class=" basis-1/3 underline" >Home</a>
	<a href="{{path('app_nouvelle_article')}}" class=" basis-1/3 underline">Nouvelle Article</a>
	<a href="{{path('app_nouvelle_catégorie')}}" class=" basis-1/3 underline" >Nouvelle Catégorie</a>
</div>

<div class="h-10 w-full border-indigo-600 border-2 rounded-md my-10 p-5 flex justify-center items-center bg-indigo-200">
    <h1 class="text-lg text-center font-serif text-emerald-600 mb-1 animate-bounce">catégories</h1>
</div>

<div class="flex flex-row justify-center items-center space-x-4 " >
		{% for NouvelleCategorie in NouvelleCategories %}
			<a href="{{ path('app_categories_show', {'id': NouvelleCategorie.id}) }}" class="bg-indigo-500 hover:bg-indigo-600  shadow-indigo-500/50 text-white font-semibold py-2 px-4 rounded-lg shadow-lg transition duration-300 ease-in-out no-underline">
        {{ NouvelleCategorie.categorie }}
      </a>
	{% endfor %}
</div>


{% endblock %}
