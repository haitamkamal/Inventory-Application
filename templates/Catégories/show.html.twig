{% extends 'base.html.twig' %}

{% block title %}Hello DeffaultController!
{% endblock %}
{% block body %}
	<a href="{{ path('app_categories') }}">X</a><br><br>

    <div class="flex flex-col gap-5">
        {% for article in articles %}
            <div class="bg-white hover:bg-gray-200 p-6 rounded-lg transition duration-300 ease-in-out">

                <h4 class="text-lg text-teal-600">{{ article.nom }}</h4>

                <p class="text-gray-700">{{ article.description }}</p>

                <p class="text-gray-500">{{ article.date ? article.date|date('Y-m-d') : 'No date' }}</p>
            </div>

        {% else %}

            <p class="text-gray-600">No articles found in this category.</p>
        {% endfor %}
    </div>
{% endblock %}
