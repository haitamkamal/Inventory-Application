{% extends 'base.html.twig' %}

{% block title %}Hello DeffaultController!
{% endblock %}

{% block body %}
<div class="flex " >
	<a href="{{path('app_articles')}}" class=" basis-1/3 underline">Articles</a>
	<a href="{{path('app_categories')}}" class=" basis-1/3 underline" >Catégories</a>
	<a href="{{path('app_deffault')}}" class=" basis-1/3 underline" >Home</a>
	<a href="{{path('app_nouvelle_article')}}" class=" basis-1/3 underline">Nouvelle Article</a>
	<a href="{{path('app_nouvelle_catégorie')}}" class=" basis-1/3 underline" >Nouvelle Catégorie</a>
</div>
	

	<div class=" h-10 w-full border-violet-600 border-2 rounded-md my-10 p-5 flex justify-center items-center  bg-violet-200 " >	
	<h1 class="text-lg text-center font-serif text-cyan-600   mb-1 animate-bounce" >Articles</h1>
	</div> 

 	{% for NouvelleArticle in NouvelleArticles %}
		<div class = " flex flex-col justify-center items-center  " >
			<h3 class="text-2xl underline decoration-double">{{ NouvelleArticle.nom }}</h3> <br>

			<p class="italic" >{{ NouvelleArticle.categorie.categorie }}</p><br>

			<p class="text-base" >{{ NouvelleArticle.description }}</p><br>

			<p>{{ NouvelleArticle.date ? NouvelleArticle.date|date('Y-m-d') : 'No date' }}</p><br>

<button onclick="showDeleteConfirmation()" class="bg-violet-500 hover:bg-violet-600 text-white font-semibold py-2 px-4 rounded-lg shadow-lg shadow-violet-500/50 transition duration-300 ease-in-out">
    <a href="{{ path('articles_delete', {'id': NouvelleArticle.id}) }}" class="hover:text-white">Supprimer</a>
</button>
		</div>
	{% endfor %}


{% endblock %}
